doctype html
html(lang='en')
  head
    block header
    script(data-curl-run="/javascripts/run.js" src="/javascripts/lib/curl/src/curl.js")
    link(type="text/css" rel="stylesheet" href="/stylesheets/style.css")

    - if(paste && paste.lang.mode != 'null')
        script(src="/javascripts/lib/codemirror/mode/#{paste.lang.mode}/#{paste.lang.mode}.js")

  body
    div#container
      div#contents
        block main

    script.
      $readonly = #{paste !== undefined};
      $mode     = "#{paste === undefined ? 'text/plain' : paste.lang.mode}";

    div.clear
    block footer
    
    div.footer#footer-right
      div#github
        a(href="https://github.com/RoxasShadow/Pasteling" target="_blank" title="[d22aea7b87]")
          img(src="/github.png" width="40" height="40" alt="Pasteling on GitHub")

    div.footer#footer-left
      div#help
        p(title="but first you should put the focus on the editor, baka! o///o")
          ='Full screen: F11'