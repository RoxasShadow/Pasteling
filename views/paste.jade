extends layouts/default

block header
  - if(paste.id !== undefined)
      title= paste.id
  - else
      title= 'Pasteling'

block main
  h1.center= paste.id
  
  textarea(name="text" id="editor" data-lang="#{paste.lang.mode}")= paste.text

  a(href="/api/read/" + paste.id + "/", target="_blank")= 'Raw'
  i.right= paste.moment(paste.createdAt).lang('en').fromNow()